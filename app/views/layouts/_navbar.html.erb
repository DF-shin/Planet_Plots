<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-image: url(<%= asset_path('NavBar.png') %>);">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "PlanetPlots.png", alt: "Planet Plots Logo", class: "navbar-logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Marketplace", plots_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Requests", requests_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.first_name + " " + current_user.last_name %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Plots", plots_path, class: "dropdown-item" %>
              <%= link_to "Create Plot", new_plot_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link login-button" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
